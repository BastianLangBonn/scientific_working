@article{Haasdijk2011,
abstract = {In evolutionary robotics, robot controllers are often evolved in a$\backslash$nseparate development phase preceding actual deployment - we call$\backslash$nthis off-line evolution. In on-line evolutionary robotics, by contrast,$\backslash$nrobot controllers adapt through evolution while the robots perform$\backslash$ntheir proper tasks, not in a separate preliminary phase. In this$\backslash$ncase, individual robots can contain their own self-sufficient evolutionary$\backslash$nalgorithm (the encapsulated approach) where individuals are typically$\backslash$nevaluated by means of a time sharing scheme: an individual is given$\backslash$nthe run of the robot for some amount of time and fitness corresponds$\backslash$nto the robot's task performance in that period.$\backslash$n$\backslash$nRacing was originally introduced as a model selection procedure that$\backslash$nquickly discards clearly inferior models. We propose and experimentally$\backslash$nvalidate racing as a technique to cut short the evaluation of poor$\backslash$nindividuals before the regular evaluation period expires. This allows$\backslash$nan increase of the number of individuals evaluated per time unit,$\backslash$nbut it also increases the robot's actual performance by virtue of$\backslash$nabandoning controllers that perform inadequately. Our experiments$\backslash$nshow that racing can improve the performance of robots that adapt$\backslash$ntheir controllers by means of an on-line evolutionary algorithm significantly.},
author = {Haasdijk, Evert and Atta-ul-Qayyum, Arif and Eiben, Agoston Endre},
